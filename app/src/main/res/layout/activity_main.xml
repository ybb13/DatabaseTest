<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.s02.ybb.com.databasetest.MainActivity">

    <Button
        android:id="@+id/create_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建数据库"
        android:layout_alignParentTop="true"/>
    <Button
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加数据"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/create_btn"/>

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除数据"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/add_btn"/>

    <Button
        android:id="@+id/updata_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新数据"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/delete_btn"/>

    <Button
        android:id="@+id/transaction_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="替换数据"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/updata_btn"/>

    <Button
        android:id="@+id/query_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询数据"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/transaction_btn"/>

    <TextView
        android:id="@+id/bookname"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="书名"
        android:gravity="center"
        android:background="#DEB887"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/query_btn"/>
    <TextView
        android:id="@+id/book_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/query_btn"
        android:layout_marginLeft="20dp"
        android:background="#DEB887"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/bookname"/>

    <TextView
        android:id="@+id/bookauthor"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="作者"
        android:gravity="center"
        android:background="#DEB887"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/bookname"/>
    <TextView
        android:id="@+id/book_author"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/bookname"
        android:layout_marginLeft="20dp"
        android:background="#DEB887"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/bookname"/>

</RelativeLayout>
